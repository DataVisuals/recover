<?xml version="1.0" encoding="utf-8"?>
<TabbedPage xmlns="http://xamarin.com/schemas/2014/forms"
            xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
            x:Class="recover.WelcomeTabbedPage"
            xmlns:local="clr-namespace:recover;assembly=recover">
    <TabbedPage.Children>
        <ContentPage Title="Welcome">
            <StackLayout VerticalOptions="Center">
                <Image Source="recover512.png" />
            </StackLayout>
        </ContentPage>
        <local:ScannerPage Title="Scanner" />
        <ContentPage Title="About">
            <StackLayout VerticalOptions="Center" HorizontalOptions="Center" >
                <Label HorizontalTextAlignment="Center" FontAttributes="Bold"
                    Text="Thanks to Icon8, Open Food Facts, api.postcodes.io and FontAwesome"/>
            </StackLayout>
        </ContentPage>
    </TabbedPage.Children>
</TabbedPage>